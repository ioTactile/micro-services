model Talk {
  id        String   @id @default(cuid())
  title     String
  content   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  authorId  String
  author    User     @relation(fields: [authorId], references: [clerkId], onDelete: Cascade)
  talkComments  TalkComment[]

  @@index([authorId])
}
